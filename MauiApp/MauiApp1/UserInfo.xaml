<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MauiApp1.UserInfo">

    <StackLayout>
        <Entry x:Name="entryUserCode" Placeholder="Enter User Code" />
        <Button Text="Select User" Clicked="OnSelectUserClicked" />
        <Button Text="Modify User Data" Clicked="OnModifyUserDataClicked" />
        <Button Text="Delete This User" Clicked="OnDeleteUserClicked" />
        <Button Text="Back" Clicked="OnBackClicked" />
        <Label x:Name="lblUserInfo" />
    </StackLayout>

</ContentPage>


