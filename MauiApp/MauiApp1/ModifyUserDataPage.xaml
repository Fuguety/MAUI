<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MauiApp1.ModifyUserDataPage">

	<StackLayout>
		<Label Text="Modify User Data" FontSize="Title" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
		<Entry x:Name="entryFirstName" Placeholder="First Name" />
		<Entry x:Name="entryLastName" Placeholder="Last Name" />
		<DatePicker x:Name="datePickerBirthDate" />
		<Switch x:Name="switchIsMember" IsToggled="true" />
		<Picker x:Name="pickerGender">
			<Picker.Items>
				<x:String>Male</x:String>
				<x:String>Female</x:String>
			</Picker.Items>
		</Picker>
		<Button Text="Save Changes" Clicked="OnSaveChangesClicked" />
		<Button Text="Cancel" Clicked="OnCancelClicked" />
	</StackLayout>

</ContentPage>

